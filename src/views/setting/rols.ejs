<%- include('../partials/header', { 
    tittle: 'Tags',
    addStyles: true, 
    styles:
        [ 'https://unpkg.com/bootstrap-table@1.21.1/dist/bootstrap-table.min.css',
        'https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css' ]
}); %>
    <!-- Page content-->
    <div class="container-fluid">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Rols</h1>
        </div>

        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="shadow"></div>
                    <div class="card-body">
                        <form id="formTag">
                            <div class="mb-3">
                                <label for="tag" class="form-label">Tag Name</label>
                                <input type="text" class="form-control" name="tag" id="tag" placeholder="Component">
                            </div>
                        </form>
                        <button type="button" class="btn btn-sm btn-primary" id="btnAddTag"><i class="fa-solid fa-plus"></i></button>
                    </div>
                </div>
            </div>

            <div class="col mb-3">
                <div class="card">
                    <div class="card-body">
                        <table
                        data-toggle="table"
                        data-pagination="true"
                        data-search="true">
                        <thead>
                            <tr>
                                <th data-field="Id">Id</th>
                                <th data-field="Tag">Tag</th>
                                <th data-field="Action" data-align="center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.map((tag) => { %>
                            <tr>
                                <td><%= tag.IdTag %></td>
                                <td><%= tag.Tag %></td>
                                <td><i class="fa-solid fa-trash-can text-danger tagDelete" data-tag="<%= tag.IdTag %>" style="cursor: pointer;"></i></td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('../partials/footer', { 
    addScripts: true, 
    scripts: [
        'https://unpkg.com/bootstrap-table@1.21.1/dist/bootstrap-table.min.js',
        'https://unpkg.com/bootstrap-table@1.20.2/dist/locale/bootstrap-table-es-MX.min.js',
        '/js/setting.js'
    ]
}); %>