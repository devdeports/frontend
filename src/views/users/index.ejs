<%- include('../partials/header', { 
    title: 'Usuarios',
    addStyles: true, 
    styles:
        [ 'https://unpkg.com/bootstrap-table@1.22.1/dist/bootstrap-table.min.css',
        'https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css',
        'https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css' ]
}); %>
    <!-- Page content-->
    <div class="container-fluid">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3">
            <h2>Usuarios</h2>
            <div class="btn-group">
                <a href="users/add" class="btn btn-sm btn-outline-primary">Agregar</a>
                <button type="button" class="btn btn-sm btn-outline-primary" id="btnFilterUser">&nbsp;Filtrar&nbsp;</button>
            </div>
        </div>

        <div class="col-lg-12 col-md-12 col-xs-12">
            <table
                id="listUsers"
                data-toolbar="#toolbar"
                data-toggle="table"
                data-ajax="userRequest"
                data-search="true"
                data-pagination="true"
                data-show-refresh="true"
                data-show-fullscreen="true"
                data-show-columns="true"
                data-locale="es-MX"
                data-row-style="rowStyle"
                data-page-size="50"
                class="tableUsers">
                <thead>
                    <tr>
                        <th data-field="IdUser">Usuario</th>
                        <th data-field="Alias" data-visible="false">Alias</th>
                        <th data-field="FirstName" data-sortable="true">Nombre</th>
                        <th data-field="LastName" data-sortable="true">Apellido</th>
                        <th data-field="UserType" data-sortable="true" data-align="center">Tipo</th>
                        <th data-field="Email">Correo</th>
                        <th data-field="PhoneNumber">Tel√©fono</th>
                        <th data-field="IdRegion" data-visible="false">Ciudad</th>
                        <th data-field="IconActive" data-align="center">Activo</th>
                        <th data-field="Events" data-formatter="rowsOptionsUsers" data-align="center">Eventos</th>
                        <th data-field="Id" data-sortable="true" data-align="center" data-visible="false">Id</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

<%- include('../partials/footer', { 
    addScripts: true, 
    scripts: [
        'https://unpkg.com/bootstrap-table@1.22.1/dist/bootstrap-table.min.js',
        'https://unpkg.com/bootstrap-table@1.20.2/dist/locale/bootstrap-table-es-MX.min.js',
        'https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js',
        '/js/user.js'
    ]
}); %>
