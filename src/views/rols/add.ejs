<%- include('../partials/header', { 
    title: 'Add Rols',
    addStyles: true, 
    styles:
        [ 'https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css',
        'https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css' ]
}); %>
    <!-- Page content-->
    <div class="container-fluid">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3">
            <h2>Nuevo <span class="text-primary">Rol</span></h2>
            <div class="btn-group">
                <a href="/rols" class="btn btn-sm btn-outline-primary"><i class="fa-solid fa-reply"></i></a>
            </div>
        </div>

        <div class="col-lg-12 col-md-12 col-sm-12 mt-3">
            <div class="card">
                <form class="card-body row" id="formAddUser">
                    <div class="col-md-4 col-sm-12">
                        <label for="idUser" class="form-label">Identificación</label>
                        <input type="text" class="form-control form-control-sm" id="idUser" name="idUser" placeholder="-" required>
                    </div>

                    <div class="col-md-4 col-sm-12">
                        <label for="userType" class="form-label">Tipo de Usuario</label>
                        <select class="form-select form-select-sm" aria-label="User Type" id="userType" name="userType">
                            <option disabled selected>Seleccionar...</option>
                            <option value="1">Administrativo</option>
                            <option value="2">Entrenador</option>
                            <option value="3">Estudiante</option>
                        </select>
                    </div>
                    <div class="col-md-4 col-sm-12 d-none d-md-block"></div>

                    <div class="col-md-4 col-sm-12 mt-3">
                        <label for="firstName" class="form-label">Nombre(s)</label>
                        <input type="text" class="form-control form-control-sm" id="firstName" name="firstName" placeholder="-">
                    </div>

                    <div class="col-md-4 col-sm-12 mt-3">
                        <label for="lastName" class="form-label">Apellido(s)</label>
                        <input type="text" class="form-control form-control-sm" id="lastName" name="lastName" placeholder="-">
                    </div>
                    <div class="col-md-4 col-sm-12 d-none d-md-block"></div>

                    <div class="col-md-4 col-sm-12 mt-3">
                        <label for="email" class="form-label">Correo</label>
                        <input type="email" class="form-control form-control-sm" id="email" name="email" placeholder="name@mail.com" required>
                    </div>

                    <div class="col-md-4 col-sm-12 mt-3">
                        <label for="phoneNumber" class="form-label">Núm. Celular</label>
                        <input type="number" class="form-control form-control-sm" id="phoneNumber" name="phoneNumber" placeholder="-">
                    </div>

                    <div class="col-md-4 col-sm-12 mt-3">
                        <label for="idRegion" class="form-label">Ciudad</label>
                        <select class="form-select form-select-sm" aria-label="Region" id="idRegion" name="idRegion">
                            <option disabled selected>Seleccionar...</option>
                            <option value="11001">Bogotá</option>
                            <option value="5001">Medellín</option>
                        </select>
                    </div>

                    <div class="col mt-3">
                        <button type="button" class="btn btn-outline-primary" id="btnAddRol">Guardar</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="d-grid d-md-flex justify-content-md-end mt-2">
            <i class="fa-regular fa-circle-question text-secondary" style="cursor: pointer;"></i>
        </div>
    </div>

<%- include('../partials/footer', { 
    addScripts: true, 
    scripts: [
        'https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js',
        '/js/rol.js'
    ]
}); %>
